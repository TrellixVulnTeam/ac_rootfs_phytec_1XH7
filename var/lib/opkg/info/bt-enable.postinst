#!/bin/sh
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	systemctl $OPTS enable bt-enable.service

	if [ -z "$D" -a "enable" = "enable" ]; then
		systemctl --no-block restart bt-enable.service
	fi
fi
# Begin section update-rc.d
if type update-rc.d >/dev/null 2>/dev/null; then
	if [ -n "$D" ]; then
		OPT="-r $D"
	else
		OPT="-s"
	fi
	update-rc.d $OPT bt-enable.sh defaults 99
fi
# End section update-rc.d
